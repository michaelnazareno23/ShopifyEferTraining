                     <li>Split King</li>
                </ul>   
            </div>
        </div>
</div>


<script>
  let varian_items = document.querySelectorAll(".variant-item")

   varian_items.forEach(varian_item => {

           varian_item.addEventListener('click', function(e){
            
            this.classList.add('active');
      
            // Remove class from other elements with the same class
            varian_items.forEach(otherBox => {
            
            if (otherBox !== this) {

            otherBox.classList.remove('active');

            }       
            
        }) 
    }) 

   });
</script>




{% comment %}{% assign first_variant = product.variants.first %}
{% assign other_variants = product.variants | slice: 1, product.variants.size %}

<div class="variant-picker">
    <div class="variant-option">
        <label for="variant-option-{{ first_variant.id }}">
            <input type="radio" id="variant-option-{{ first_variant.id }}" name="variant" value="{{ first_variant.id }}" checked>
            {{ first_variant.title }} - {{ first_variant.price | money }}
        </label>
    </div>
    <div class="variant-option">
        <label for="variant-dropdown">
            Select your Size:
        </label>
        <select id="variant-dropdown">
            {% for variant in other_variants %}
                <option value="{{ variant.id }}">{{ variant.title }}</option>
            {% endfor %}
        </select>
    </div>
</div>

<script>
    // JavaScript to handle changing the variant when selecting from the dropdown
    document.getElementById('variant-dropdown').addEventListener('change', function() {
        var variantId = this.value;
        document.querySelector('input[name="variant"][value="' + variantId + '"]').click();
    });
</script>

<style>
    /* Additional CSS for styling the variant picker */
    .variant-picker {
        margin-bottom: 20px;
    }
    .variant-option {
        margin-bottom: 10px;
    }
</style>

{% endcomment %}
