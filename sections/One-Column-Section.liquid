                      </div>  
                      <div class="item-content-wrap">
                        <h3 class="item-heading">{{block.settings.item1_head}}</h3>
                        <div class="item-paragraph">
                          {{ block.settings.item1_content }}
                        </div>
                      </div>
                    </div>
                
                   {% endif %}

                
                   {% if block.settings.item2_image !=blank  or block.settings.item2_head !=blank or block.settings.item2_content !=blank %}

                    <div class="item-box">
                      <div class="item-image-wrap">
                          <img class="m-auto img-responsive" src="{% if block.settings.item2_image != blank %} {{block.settings.item2_image | img_url: 'master'}} {% endif %}" alt="{{block.settings.item2_image.alt}}" width="{{block.settings.item2_image.width}}" height="{{block.settings.item2_image.height}}">
                      </div>  
                      <div class="item-content-wrap">
                        <h3 class="item-heading">{{block.settings.item2_head}}</h3>
                        <div class="item-paragraph">
                          {{ block.settings.item2_content }}
                        </div>
                      </div>
                    </div>
                
                   {% endif %} 

                   {% if block.settings.item3_image !=blank  or block.settings.item3_head !=blank or block.settings.item3_content !=blank %}

                    <div class="item-box">
                     <div class="item-image-wrap">
                          <img class="m-auto img-responsive" src="{% if block.settings.item3_image != blank %} {{block.settings.item3_image | img_url: 'master'}} {% endif %}" alt="{{block.settings.item3_image.alt}}" width="{{block.settings.item3_image.width}}" height="{{block.settings.item3_image.height}}">
                      </div>  
                      <div class="item-content-wrap">
                        <h3 class="item-heading">{{block.settings.item3_head}}</h3>
                        <div class="item-paragraph">
