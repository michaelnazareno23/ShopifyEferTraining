                        <div class="item-paragraph">
                          {{ block.settings.item4_content }}
                        </div>
                      </div>
                    </div>
                
                   {% endif %} 


                   {% if block.settings.item5_image !=blank  or block.settings.item5_head !=blank or block.settings.item5_content !=blank %}

                    <div class="item-box">
                      <div class="item-image-wrap">
                          <img class="m-auto img-responsive" src="{% if block.settings.item5_image != blank %} {{block.settings.item5_image | img_url: 'master'}} {% endif %}" alt="{{block.settings.item5_image.alt}}" width="{{block.settings.item5_image.width}}" height="{{block.settings.item5_image.height}}">
                      </div>  
