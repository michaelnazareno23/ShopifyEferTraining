                        <h3 class="item-heading">{{block.settings.item5_head}}</h3>
                        <div class="item-paragraph">
                          {{ block.settings.item5_content }}
                        </div>
                      </div>
                    </div>
                
                   {% endif %} 

                   {% if block.settings.item6_image !=blank  or block.settings.item6_head !=blank or block.settings.item6_content !=blank %}

                    <div class="item-box">
                      <div class="item-image-wrap">
                          <img class="m-auto img-responsive" src="{% if block.settings.item6_image != blank %} {{block.settings.item6_image | img_url: 'master'}} {% endif %}" alt="{{block.settings.item6_image.alt}}" width="{{block.settings.item6_image.width}}" height="{{block.settings.item6_image.height}}">
                      </div>        
                      <div class="item-content-wrap">
                        <h3 class="item-heading">{{block.settings.item6_head}}</h3>
                        <div class="item-paragraph">
                          {{ block.settings.item6_content }}
                        </div>
                      </div>
                    </div>
                
                   {% endif %} 
                
               </div>
          
            {%- endcase -%}
            {%- endfor -%}  

     
       </div>
    </div>
</div>

